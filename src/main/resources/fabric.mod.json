{
    "schemaVersion": 1,
    "id": "advancementinfo",
    "version": "${version}",
    "environment": "client",
    "entrypoints": {
        "client": [ "de.guntram.mcmod.advancementinfo.AdvancementInfo" ],
        "modmenu": [ "de.guntram.mcmod.advancementinfo.ModMenuIntegration" ]
    },
    "custom": {
        "modupdater": {
            "strategy": "json",
            "url": "https://raw.githubusercontent.com/gbl/ModVersionInfo/master/AdvancementInfo.json"
        }
    },
    "mixins": [ "mixins.advancementinfo.json" ],
    "accessWidener": "advancementinfo.accesswidener",
    "depends": {
        "fabric": "*",
        "cloth-config2": ">=5.0.0"
    },
    "recommends": {
        "modmenu" : ">=2.0.0"
    },
    "name": "BetterAdvancementInfo",
    "description": "A Fabric mod that enhances the advancements screen with detailed information panels and customizable layouts.",
    "icon": "icon.png",
    "authors": [ "" ],
    "contact": {
        "homepage": "https://modrinth.com/mod/better-advancement-info",
        "sources": "https://github.com/rajeshjaga/Advancement-Info",
        "issues": "https://github.com/rajeshjaga/Advancement-Info/issues"
    }
}
